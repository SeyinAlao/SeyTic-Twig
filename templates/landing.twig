{% extends 'layout.twig' %}

{% block content %}

<!-- Navbar -->
<nav class="bg-white border-b border-slate-200">
  <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
    <div class="flex items-center space-x-2">
      <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
        <i data-lucide="ticket" class="text-white w-5 h-5"></i>
      </div>
      <span class="text-slate-900 font-semibold">SeyTic</span>
    </div>

    <div class="flex items-center gap-4">
      <a href="/login.php" class="text-slate-700 hover:text-slate-900">Login</a>
      <a href="/register.php" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">Get Started</a>
    </div>
  </div>
</nav>

<!-- Hero -->
<section class="py-20 md:py-32 text-center">
  <h1 class="text-4xl text-slate-900 mb-6 font-bold">Manage Tickets with Ease</h1>
  <p class="text-slate-600 mb-8 max-w-2xl mx-auto">
    Simplify your workflow, manage issues effortlessly, and collaborate smoothly with SeyTic.
  </p>

  <div class="flex justify-center gap-4">
    <a href="/register.php" class="px-6 py-3 bg-blue-600 text-white rounded-lg">Get Started Free</a>
    <a href="/login.php" class="px-6 py-3 border border-slate-300 rounded-lg">Sign In</a>
  </div>
</section>

<!-- Features -->
<section class="py-20 bg-white">
  <div class="max-w-[1440px] mx-auto px-6">
    <h2 class="text-slate-900 text-3xl font-semibold text-center mb-16">Everything you need</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for feature in features %}
        <div class="bg-white rounded-xl p-6 shadow-lg border border-slate-200 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center text-blue-600 mb-4">
            <i data-lucide="{{ feature.icon }}" class="w-6 h-6"></i>
          </div>
          <h3 class="text-slate-900 mb-2 font-medium">{{ feature.title }}</h3>
          <p class="text-slate-600">{{ feature.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- CTA -->
<section class="py-20 bg-blue-600 text-white text-center">
  <h2 class="text-3xl mb-4 font-semibold">Ready to go?</h2>
  <p class="mb-8 opacity-90 max-w-xl mx-auto">Join teams using SeyTic today.</p>
  <a href="/register.php" class="px-6 py-3 bg-white text-blue-600 rounded-lg">Start Free Trial</a>
</section>

{% endblock %}
